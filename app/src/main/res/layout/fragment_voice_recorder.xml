<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.voicerecorderfragment.VoiceRecorderFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_record"
            style="@style/TextAppearance.Material3.BodyLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            tools:text="Recording..."
            tools:visibility="visible" />

        <TextView
            android:id="@+id/record_time_tv"
            style="@style/TextAppearance.Material3.DisplayLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_record"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:visibility="gone"
            tools:text="10"
            tools:visibility="visible" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/startRecordBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/record_time_tv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:text="Record" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/playRecordBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/startRecordBtn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:text="Play" />
    </RelativeLayout>
</FrameLayout>