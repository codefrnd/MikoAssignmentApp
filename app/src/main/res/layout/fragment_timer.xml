<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.timerfragment.TimerFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <TextView
            android:id="@+id/runtime_text_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Active Runtime" />

        <TextView
            android:id="@+id/runtime_tv"
            style="@style/TextAppearance.Material3.DisplayLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/runtime_text_tv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:countDown="false"
            tools:text="60" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/camera_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/runtime_tv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:text="Camera" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/record_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/camera_btn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:text="Recorder" />

    </RelativeLayout>

</FrameLayout>